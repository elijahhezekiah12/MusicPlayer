<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:fillViewport="true"
    android:id="@+id/scrollViewgenerate">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    android:weightSum="1">


    <include
        android:id="@+id/generateApp_bar"
        layout="@layout/generatesplitsappbar"></include>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Workout_Duration"
        android:id="@+id/textView5"
        android:layout_weight="0.10"
        android:layout_gravity="center_vertical|left"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:textSize="20sp"

        android:gravity="center|center_vertical"
        android:layout_marginTop="100dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_gravity="right"
        android:layout_weight="0.10"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/Wine"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Body_Group"
        android:id="@+id/textView6"
        android:layout_weight="0.10"
        android:textStyle="bold"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:gravity="center|center_vertical"
        android:layout_marginTop="100dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_weight="0.10"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/Wine" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate"
        android:id="@+id/button"
        android:gravity="center"
        android:background="#eb3424"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="150dp" />
</LinearLayout>
</ScrollView>
